    <script>
        $(document).ready(function () {
            function isWeiXin() {
                var ua = window.navigator.userAgent.toLowerCase();
                if (ua.match(/MicroMessenger/i) == 'micromessenger') {
                    $('.holiday-shibie').show();
                    $('.holiday-copy').hide();
                } else {
                    $('.holiday-copy').show();
                    $('.holiday-shibie').hide();
                }
            }
            isWeiXin();
            // 复制文本
            var clipboard = new Clipboard('#target');
            clipboard.on('success', function (e) {
                $('.txt-success').show();
                setTimeout(function () {
                    $('.txt-success').hide();
                }, 1500)
                console.log(e);
                e.clearSelection();
                console.log(e.clearSelection);
            });
            $('.guwen').click(function () {
                $('.mask').show();
                $('.booking-pop').show();
            });
            $('.booking-pop-cansel,.mask').click(function () {
                $('.mask').hide();
                $('.booking-pop').hide();
            });
        })
        $(function () {
            // 弹窗部分js
            var action = 'getProjectInfo';
            var code = "<?php echo $project;?>";
            var sign = $.md5(action + code + pattern + randomstr + time);
            var data = { pattern: pattern, from: from, code: code, time: time, action: action, sign: sign };
            $.ajax({
                url: "<?php echo $http.config('newinterfaceurl')?>/getProjectInfo",
                type: "get",
                dataType: "json",
                data: data,
                success: function (data) {
                    // console.log(data);
                    if (data.code == 1) {
                        $('.project_abbreviation').html(data.project_info.E_Abbreviation);
                        $('.project_address').html(data.project_info.E_Region);
                        $('.project_characteristic').html(data.project_info.E_Characteristic);
                        $('.plan_name').html(data.project_info.E_Title);
                        $('.plan_introduction').append(data.project_info.plan_intro);
                        $('.detail_scene').append(data.project_info.project_intro);
                        var project_content = data.project_info.project_intro;
                        if (data.project_info.E_PlanCode === null) {
                            $('.detail_header').hide();
                            $('.key_news_block').hide();
                        } else {
                            $('.project_name').html(data.project_info.project_name);
                            $('.plan_price').html(data.project_info.E_Money);
                            $('.plan_cycle').html(data.project_info.E_Cycle);
                            $('.plan_scale').html(data.project_info.E_Scale + '%');
                            $('.plan_coupon').html(data.project_info.E_Coupon + '%');
                            $('.plan_des').html(data.project_info.E_Digest);
                            $('.buy_person').html(data.project_info.Purchased);
                            $('.has_person').html(data.project_info.Surplus);
                            $('.plan_last').html(data.project_info.lastday);
                            $('.to_plan').attr('onclick', "javascript:window.location.href='/plan?project=" + data.project_info.E_Code + "'");
                            $('#img_header').attr("src", data.project_info.E_HeaderImg);
                        }
                        if ($('.detail_scene ').find('img').length > 0) {
                            $('.detail_scene ').find('img').each(function () {
                                $(this).attr('data-preview-src', '');
                                $(this).attr('data-preview-group', 1);

                            })
                        }
                        $('#img_header').load(function () {
                            var navH = $("#slider").offset().top;
                            $(document).scroll(function () {
                                var scroH = $(document).scrollTop();
                                var oKey = $('#key').offset().top - 200;
                                var oCase = $('#case').offset().top - 200;
                                var oGai = $('#gai').offset().top - 200;
                                if (scroH >= navH) {
                                    $("#slider").css({
                                        "position": "fixed",
                                        "top": 0,
                                        "background": "#fff"
                                    });
                                } else if (scroH < navH) {
                                    $("#slider").css({
                                        "position": "static"
                                    });
                                }
                                if (scroH >= oGai && scroH < oKey) {
                                    $(".key_btn").removeClass("mui-active");
                                    $('.case_btn').removeClass('mui-active');
                                    $('.gai_btn').addClass('mui-active');
                                }
                                else if (scroH >= oKey && scroH < oCase) {
                                    $(".key_btn").addClass("mui-active");
                                    $('.case_btn').removeClass('mui-active');
                                    $('.gai_btn').removeClass('mui-active');
                                }
                                else if (scroH >= oCase) {
                                    $(".key_btn").removeClass("mui-active");
                                    $('.case_btn').addClass('mui-active');
                                    $('.gai_btn').removeClass('mui-active');
                                }
                            });
                            $('.mui-segmented-control-inverted>div').click(function () {
                                $('html, body').animate({
                                    scrollTop: $('#' + $(this).attr('case')).offset().top - 80
                                }, 1000);
                            });
                        });
                        mui(mui('#proportion')).progressbar().setProgress(data.project_info.proportion);
                    }
                }
            })
        });
    </script>
