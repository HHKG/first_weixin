           </div>
           <div class="imitate-right-nav">
                进入模拟模式
           </div>
        </div>
        <!-- 弹窗 -->
        <div class="mask"></div>
        <div class="imitate-pop">
            <div class="imitate-success">
                模拟模式进入成功
            </div>
            <div class="imitate-pop-nav">
                <span onclick="javascript:window.location.href='/member'">
                    查看账户
                </span>
                <span class="imitate-pop-nav-right" onclick="javascript:window.location.href='/project?project=MZJBQKj3NmPolKOv8qbj'">
                    参与计划
                </span>
            </div>
        </div>
    </div>
    <script>
     $(document).ready(function(){
       $('.imitate-right-nav').click(function(){
         $('.mask,.imitate-pop').show(); 
       })
     });
    </script>
</body>

</html>