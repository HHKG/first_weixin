<script>
    $(function () {
        // mui.max=90;
        var action='getpaystate';
        var   sn= "<?php echo $sn;?>";
        var sign=$.md5(action+pattern+randomstr+sn+time);
        var datas={pattern:pattern,from:from,sn:sn,time:time,action:action, sign:sign};
        $.ajax({
            url: "<?php echo config('interfaceurl')?>/getpaystate",
            type: 'POST',
            dataType: 'json',
            headers:{token:"<?php echo session('token');?>" },
            data: datas,
            success: function (data) {
                //console.log(data);
                if (data.code == 1) {
                    if (data.data.first==1){
                        $('.shoudan').show();
                    }
                    $('.plan_title').html(data.data.E_PlanName);
                    $('.plan_money').html(price(data.data.E_OrderPrice));
                    if (data.data.E_PayType==1){
                        $('.paytype').html('消费金支付');
                    }else if (data.data.E_PayType==2){
                        $('.paytype').html('余额支付');
                    } else{
                        $('.paytype').html('微信支付');
                    }
                    if(pattern==1){
                        $('.plan_day').html('每隔'+data.data.E_BillCycle+'天');
                    }else{
                        $('.plan_day').html('每月'+data.data.E_BillDay+'日');
                    }

                    $('.coupon').html(data.data.E_CouponTime);

                }else{
                    mui.alert('非法操作', '提示', function () {
                        window.location.href = '/index';
                    });
                }

            }
        })
        $('.shoudan_close').click(function () {
            $('.shoudan').hide();
        });
        $('.mask').click(function () {
            $('.shoudan').hide();
        })
    })
    function price(price) {
        // //console.log(price);
        price=parseFloat(price);
        // //console.log(price);
        return price.toLocaleString('zh-Hans-CN', {
            style: 'currency',
            currency: 'CNY',
            useGrouping:true
        })
    }
</script>