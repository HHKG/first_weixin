    <script>
        $(document).ready(function () {
            // 复制文本
            var clipboard = new Clipboard('#target');
            clipboard.on('success', function (e) {
                $('.txt-success').show();
                setTimeout(function () {
                    $('.txt-success').hide();
                }, 1500)
                console.log(e);
                e.clearSelection();
                console.log(e.clearSelection);
            });
            $('.booking-pop').hide();
            $('.talk,.online,.btn_block').click(function () {
                $('.mask').show();
                $('.booking-pop').show();
            });
            $('.booking-pop-cansel').click(function () {
                $('.mask').hide();
                $('.booking-pop').hide();
            });
            var navH = $("#slider").offset().top;
            $(document).scroll(function () {
                var scroH = $(document).scrollTop();
                var oKey = $('#key').offset().top - 200;
                var oCase = $('#case').offset().top - 200;
                var oGai = $('#gai').offset().top - 200;
                if (scroH >= navH) {
                    $("#slider").css({
                        "position": "fixed",
                        "top": 0,
                        "background": "#fff"
                    });
                } else if (scroH < navH) {
                    $("#slider").css({
                        "position": "static"
                    });
                }
                if (scroH >= oGai && scroH > oKey) {
                    $(".key_btn").removeClass("mui-active");
                    $('.case_btn').removeClass('mui-active');
                    $('.gai_btn').addClass('mui-active');
                }
                else if (scroH >= oKey && scroH < oGai) {
                    $(".key_btn").addClass("mui-active");
                    $('.case_btn').removeClass('mui-active');
                    $('.gai_btn').removeClass('mui-active');
                }
                else if (scroH >= oCase) {
                    $(".key_btn").removeClass("mui-active");
                    $('.case_btn').addClass('mui-active');
                    $('.gai_btn').removeClass('mui-active');
                }
            })
            $('.mui-segmented-control-inverted>div').click(function () {
                $('html, body').animate({
                    scrollTop: $('#' + $(this).attr('case')).offset().top - 80
                }, 1000);
            });
            var gallery = mui('.mui-slider');
            gallery.slider({
                interval: 3000
            });

        });
    </script>
